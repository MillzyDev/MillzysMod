<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MillzysMod.Installer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MillzysMod.Installer.Views.QuestInstallWindow"
        Icon="/Assets/MM-Icon.ico"
        Title="Millzy's Mod Installer - Quest"
>

	<Window.Background>
		<ImageBrush Source="/Assets/bonelab-hero.jpg" Stretch="UniformToFill"></ImageBrush>
	</Window.Background>

	<Design.DataContext>
		<vm:QuestInstallWindowViewModel/>
	</Design.DataContext>

	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="100">
		<Image Width="500" Source="/Assets/MM-full-small-cropped.png"></Image>
		<StackPanel Name="Begin" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="50">
			<TextBlock FontSize="20" Text="Please connect your Quest to your PC via USB cable and press &#34;Begin Installation&#34;"></TextBlock>
			<Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="200" Height="40" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Background="HotPink" Content="Begin Installation"></Button>
		</StackPanel>
	</StackPanel>
</Window>
